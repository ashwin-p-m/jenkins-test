pipeline {
	
	agent any
	stages {
		
		stage('Init') {
			
			steps {
				
				echo 'Hi, this is Ashwin from CHII'
				echo 'We are starting testing'
				
			}
			
		}
		stage('Build') {
			
			steps {
				echo 'Building Sample Maven Project'
			}
			
		}
		stage('Deploy') {
			
			steps {
				echo 'Deploying in Staging Area'
			}
			
		}
		stage('Deploy Production') {
			
			steps {
				echo 'Deploying in Production Area'
			}
			
		}
		
	}
	
}